{
  "memory": 256,
  "portMappings": [
    {
      "hostPort": 80,
      "containerPort": 8080,
      "protocol": "tcp"
    }
  ],
  "cpu": 10,
  "name": "agile-training-app",
  "environment" : [
    { "name" : "ECS_AVAILABLE_LOGGING_DRIVER", "value" : "'[\"awslogs\"]'" }
  ],
  "logConfiguration": {
    "logDriver": "awslogs",
    "options": {
      "awslogs-group": "sample-training-team01",
      "awslogs-region": "ap-northeast-1",
      "awslogs-stream-prefix": "agile-training-app"
    }
  }
}
